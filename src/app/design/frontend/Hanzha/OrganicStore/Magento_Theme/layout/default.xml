<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.panel">
            <container name="about.contact.container" htmlClass="about-contact-container" label="About Contact Container" htmlTag="div" before="minicart"/>
        </referenceContainer>
        <referenceContainer name="footer-container">
            <block class="Magento\Cms\Block\Block" name="footer.overall.block">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer_overall_block</argument>
                </arguments>
            </block>
            <referenceBlock name="footer_links" remove="true" />
        </referenceContainer>
        <move element="page.top" destination="header.panel" after="logo"/>
        <move element="logo" destination="header.panel" before="-"/>
        <move element="breadcrumbs" destination="content.top" before="-"/>
    </body>
</page>

